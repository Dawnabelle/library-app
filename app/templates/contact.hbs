<div class="jumbotron text-center">
  <h1>{{contactHeader}}</h1>
  <p>We love hearing from you.</p>

  <div class="form-horizontal form-group form-group-lg row">
    <div class="col-xs-10 col-xs-offset-1 col-sm-6 col-sm-offset-1 col-md-5 col-md-offset-2">
      {{textarea type="text" value=contactMessage class="form-control" placeholder="Enter your message." autofocus="autofocus"}}
    </div>
    <div class="col-xs-10 col-xs-offset-1 col-sm-6 col-sm-offset-1 col-md-5 col-md-offset-2">
      {{input type="email" value=contactEmail class="form-control" placeholder="Please type your e-mail address." autofocus="autofocus"}}
    </div>
    <div class="col-xs-10 col-xs-offset-1 col-sm-offset-0 col-sm-4 col-md-3">
      <button type="submit" disabled={{isDisabled}}  {{action "saveContact" model}} class="btn btn-primary btn-lg btn-block">Send Message</button>
    </div>
  </div>
  {{#if contactResponseMessage}}
    <div class="alert alert-success">{{contactResponseMessage}}</div>
  {{/if}}
</div>